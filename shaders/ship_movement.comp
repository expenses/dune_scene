#version 450

struct ShipPosition {
    vec3 translation;
    float y_rotation;
};

layout(set = 0, binding = 0) buffer Ships {
    ShipPosition positions[];
};

layout(local_size_x = 64, local_size_y = 1, local_size_z = 1) in;

void main() {
    uint index = gl_GlobalInvocationID.x;

    ShipPosition ship = positions[index];

    ship.y_rotation += 0.01;

    positions[index] = ship;
}

